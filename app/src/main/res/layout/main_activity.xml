<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_tween_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tween Animation"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:background="@color/colorAccent"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/view_frame_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:text="Frame Animation"
        android:gravity="center"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/view_property_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_marginBottom="20dp"
        android:text="Property Animation"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@color/colorAccent"/>


    <com.melon.learn.uilearning.ShaderDemoView
        android:layout_width="match_parent"
        android:layout_height="100dp"/>



</LinearLayout>
